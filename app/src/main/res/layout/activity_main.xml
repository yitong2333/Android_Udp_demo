<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_main_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/round_transmented_bg"
        android:layout_margin="5dp"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_main_pigface"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赛博智慧养猪系统"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="XXX 已登录"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_transmented_bg"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"

            >
            <TextView
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="当前时间："
                android:textColor="@color/white"
                android:drawableStart="@drawable/ic_main_clock"
                android:drawablePadding="5dp"/>
            <TextView
                android:id="@+id/tv_main_time"
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="XX:XX:XX"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="猪场号："
                android:drawableStart="@drawable/ic_main_no"
                android:drawablePadding="5dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="NO:114514"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="猪场温度："
                android:drawableStart="@drawable/ic_main_tem"
                android:drawablePadding="5dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_main_temper"
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="XXX ℃"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="猪场湿度："
                android:drawableStart="@drawable/ic_main_hum"
                android:drawablePadding="5dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_main_hum"
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="XXX %"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_transmented_bg"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:text="🐖  公猪存栏："

                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_main_mPig"
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="108头 "
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🐖  母猪存栏："
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_main_fmPig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="99头"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🫘  豆柏存量:"

                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_main_bean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="1399 KG      "
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🥫  复合饲料："
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_main_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="520 KG"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            >
            <TextView
                android:layout_width="-1dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:text="🫗  水的存量:"

                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_main_water"
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="999 公升"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="-1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="🧂  蛋白存量："
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_main_proteins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="89.64 KG"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@drawable/round_transmented_bg"
        android:padding="5dp"
        >
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center">

            <!-- ImageButton 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_pig"
                    android:background="@color/transparent_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="猪只档案"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>



            <!-- ImageButton 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:id="@+id/btn_main_air"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_aircondition"
                    android:background="@color/transparent_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="环境配置"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <!-- ImageButton 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_jiankong"
                    android:background="@color/transparent_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="监控预警"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <!-- ImageButton 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_jiankang"
                    android:background="@color/transparent_black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康管理"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </GridLayout>


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>